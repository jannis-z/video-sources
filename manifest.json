{
  "manifest_version": 3,
  "name": "Video Downloader",
  "version": "1.0",
  "description": "Detects videos and allows the user to open them in the chrome video player or download the videos.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*/*"]
    }
  ]
}